<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.device.mapper.ScreenshotRecordMapper">
    
    <resultMap type="ScreenshotRecord" id="ScreenshotRecordResult">
        <result property="deviceId"    column="device_id"    />
        <result property="screenshotKey"    column="screenshot_key"    />
        <result property="screenshotTime"    column="screenshot_time"    />
        <result property="deviceName"    column="device_name"    />
    </resultMap>

    <sql id="selectScreenshotRecordVo">
        SELECT SR.DEVICE_ID,
               SR.SCREENSHOT_KEY,
               SR.SCREENSHOT_TIME,
               D.DEVICE_NAME
          FROM SCREENSHOT_RECORD SR
          LEFT JOIN DEVICE D
            ON D.DEVICE_ID = SR.DEVICE_ID ORDER BY SR.SCREENSHOT_TIME DESC
    </sql>

    <select id="selectScreenshotRecordList" parameterType="ScreenshotRecord" resultMap="ScreenshotRecordResult">
        <include refid="selectScreenshotRecordVo"/>
        <where>
            <if test="screenshotKey != null  and screenshotKey != ''">and screenshot_key = #{screenshotKey}</if>
            <!-- 使用 BETWEEN 条件查询某一天内的所有记录 -->
            <if test="screenshotTime != null and screenshotKey != ''">
                and screenshot_time BETWEEN #{screenshotTime} AND DATE_ADD(#{screenshotTime}, INTERVAL 1 DAY)
            </if>
        </where>
    </select>
    
    <select id="selectScreenshotRecordByDeviceId" parameterType="Long" resultMap="ScreenshotRecordResult">
        <include refid="selectScreenshotRecordVo"/>
        where device_id = #{deviceId}
    </select>
        
    <insert id="insertScreenshotRecord" parameterType="ScreenshotRecord">
        insert into screenshot_record
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="deviceId != null">device_id,</if>
            <if test="screenshotKey != null">screenshot_key,</if>
            <if test="screenshotTime != null">screenshot_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="deviceId != null">#{deviceId},</if>
            <if test="screenshotKey != null">#{screenshotKey},</if>
            <if test="screenshotTime != null">#{screenshotTime},</if>
         </trim>
    </insert>

    <update id="updateScreenshotRecord" parameterType="ScreenshotRecord">
        update screenshot_record
        <trim prefix="SET" suffixOverrides=",">
            <if test="screenshotKey != null">screenshot_key = #{screenshotKey},</if>
            <if test="screenshotTime != null">screenshot_time = #{screenshotTime},</if>
        </trim>
        where device_id = #{deviceId}
    </update>

    <delete id="deleteScreenshotRecordByDeviceId" parameterType="Long">
        delete from screenshot_record where device_id = #{deviceId}
    </delete>

    <delete id="deleteScreenshotRecordByScreenshotKeys" parameterType="String">
        delete
        from screenshot_record sr
        where sr.screenshot_key = #{screenshotKey,jdbcType=VARCHAR}
    </delete>
</mapper>